# Turns on alarms on workdays and off on "not workdays"
  - alias: 'Turn on alarms'
    trigger:
      platform: time
      at: '04:00:00'
    condition:
      - condition: state
        entity_id: binary_sensor.arbejdsdag
        state: on
    action:
      - service: homeassistant.turn_on
        entity_id: switch.sonos_alarm_39
      - service: homeassistant.turn_on
        entity_id: switch.sonos_alarm_41
      - service: homeassistant.turn_on
        entity_id: switch.sonos_alarm_18
        
      


# Turns off lights at 23:00
  - alias: 'Sluk lys i glasskab i forgang'
    trigger:
      # Prefix the first line of each trigger configuration
      # with a '-' to enter multiple
      - platform: time
        at: '23:00:00'
    action:
      # With a single service call, we don't need a '-' before service - though you can if you want to
      service: homeassistant.turn_off
      entity_id: switch.sonoff_10006a2cdd
      
